@s

--- color_pass.vert
#version 430 core

in vec2 a_position;

out vec2 v_texCoord;

void main(){
    gl_Position = vec4(a_position, -1, 1);

    v_texCoord = a_position * 0.5 + 0.5;
}
---

--- color_pass.frag
#version 430 core

in vec2 v_texCoord;

uniform sampler2D s_color;

out vec4 f_color;

void main(){
    f_color = texture(s_color, v_texCoord);
}

